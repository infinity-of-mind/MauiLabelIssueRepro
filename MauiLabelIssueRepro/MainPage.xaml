<?xml version="1.0"
      encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLabelIssueRepro.MainPage">
    <Grid>
        <CollectionView ItemsSource="{Binding TestItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">

                        <!-- TailTruncation works -->
                        <!-- <Label Text="{Binding }" -->
                        <!--        LineBreakMode="TailTruncation"/> -->

                        <!-- TailTruncation doesn't work after scroll-->
                        <Label LineBreakMode="TailTruncation">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding }" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>